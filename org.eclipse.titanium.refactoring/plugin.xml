                     <with variable="selection">  
                        <iterate operator="and">
                           <adapt type="org.eclipse.core.resources.IResource">
                           </adapt>  
                        </iterate>
                     </with>
                   </visibleWhen>
           </command>
        </menu>
     </menuContribution>
  </extension>
