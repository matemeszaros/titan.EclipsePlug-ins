module switch_bool {
function f(boolean b, integer i) {
  // do not select on boolean value
  select(b) {
    case(true) {}
    case(false) {}
  }
  
  // select on integer is fine
  select(i) {
    case(0) {}
    case(42) {}
  }
}
}