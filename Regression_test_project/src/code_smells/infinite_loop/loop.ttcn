module loop {
control {
  var integer i;
  
  // infinite loops
  for (i := 0; true; i := i+1) {}
  while (true) {}
  do {} while(true);
  
  // not infinite loops
  for (i := 0; i < 10; i := i+1) {}
  while (i < 10) {}
  do {} while (i < 10);
}
}